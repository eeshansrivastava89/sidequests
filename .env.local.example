DATABASE_URL="file:./dev.db"
DEV_ROOT="~/dev"
EXCLUDE_DIRS=".sidequests,node_modules,.venv,__pycache__,.git"
SANITIZE_PATHS=true

# LLM provider configuration
# LLM_PROVIDER=claude-cli        # claude-cli | openrouter | ollama | mlx | codex-cli
# LLM_ALLOW_UNSAFE=false          # Required for codex-cli (agentic provider)
# LLM_CONCURRENCY=3               # Max parallel LLM calls during refresh
# CLAUDE_CLI_MODEL=haiku          # Model override for claude-cli provider (e.g. haiku, sonnet, opus)
# LLM_DEBUG=true                  # Log raw LLM output to server console
# LLM_OVERWRITE_METADATA=false    # Overwrite existing metadata with LLM values on refresh

# OpenRouter
# OPENROUTER_API_KEY=
# OPENROUTER_MODEL=anthropic/claude-sonnet-4

# Ollama
# OLLAMA_URL=http://localhost:11434
# OLLAMA_MODEL=llama3

# MLX
# MLX_URL=http://localhost:8080
# MLX_MODEL=default
